{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start_lldb_server_remote_android",
      "type": "shell",
      "linux": {
        "command": "sh",
        "args": ["${workspaceFolder}/script/start_lldb_server_remote_android.sh"],
      },
      "isBackground": true
    },
    {
      "label": "stop_lldb_server_remote_android",
      "type": "shell",
      "command": "sh",
      "args": ["${workspaceFolder}/script/stop_lldb_server_remote_android.sh"],
      "isBackground": true
    },
    {
      "label": "start_lldb_server_remote_linux",
      "type": "shell",
      "dependsOn": "build",
      "command": "lldb-server",
      "args": ["platform", "--listen", "*:1234", "--server"],
      "isBackground": true
    },
    {
      "label": "stop_lldb_server_remote_linux",
      "type": "shell",
      "dependsOn": "build",
      "command": "echo stopstop",
      "args": [
        // "platform",
        // "--listen",
        // "127.0.0.1:1234",
        // "--server"
      ],
      "isBackground": true
    },
    {
      "label": "build",
      "type": "shell",
      "command": "cd build && cmake -DCMAKE_BUILD_TYPE=Debug ../ && cmake --build .",
      "args": []
    },
    {
      "label": "build_android",
      "type": "shell",
      "command": "cd build && rm -rf * && cmake -DANDROID=true ../ && cmake --build .",
      "args": [],
    }
  ]
}
